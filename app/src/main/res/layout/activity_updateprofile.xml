<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".updateprofile">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="0dp"
        android:background="#84EF07"
        android:id="@+id/toolbarofupdateprofile">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/backbuttonupdateprofile"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_centerVertical="true">

            </ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="update profile"
                android:layout_toRightOf="@id/backbuttonupdateprofile"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                android:id="@+id/myappext"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>



</RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/toolbarofupdateprofile"
        android:layout_marginTop="80dp"
        android:id="@+id/getnewuserimage"
        app:cardCornerRadius="130dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/eduh"
        android:id="@+id/getnewuserimageonimageview"
        android:scaleType="centerCrop">
    </ImageView>

    </androidx.cardview.widget.CardView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:hint="Enter your New Name Here"
        android:id="@+id/getnewusername"
        android:clickable="false"
        android:enabled="false"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp">

    </EditText>
    <android.widget.Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/getnewusername"
        android:id="@+id/updateprofilebutton"
        android:layout_marginTop="20dp"
        android:text="Update profile"
        android:textColor="@color/black">
        
    </android.widget.Button>
    
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateprofilebutton"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:id="@+id/progressbarupdateprofile">

    </ProgressBar>


</RelativeLayout>